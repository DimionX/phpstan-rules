{
    "name": "dimionx/phpstan-rules",
    "type": "phpstan-extension",
    "description": "Rule for PHPStan that detects when production code depends on classes from Composer dev-dependencies, with flexible configuration to selectively allow certain classes or namespaces where needed.",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrey Kapitanov",
            "homepage": "https://ensi.tech",
            "email": "kapitanov@greensight.ru"
        }
    ],
    "keywords": [
        "phpstan",
        "static analysis",
        "phpstan-rule",
        "composer",
        "dev-dependencies"
    ],
    "extra": {
        "phpstan": {
            "includes": [
                "extension.neon"
            ]
        }
    },
    "require": {
        "php": "^8.0",
        "phpstan/phpstan": "^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.2",
        "nette/neon": "^3.3.1",
        "pestphp/pest": "^1.22 || ^2.0 || ^3.0",
        "pestphp/pest-plugin-parallel": "^1.2",
        "phpstan/phpstan-deprecation-rules": "^1.2 || ^2.0",
        "spaze/coding-standard": "^1.8"
    },
    "autoload": {
        "psr-4": {"DimionX\\PHPStan\\": "src"}
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "cs": "php-cs-fixer fix --config .php-cs-fixer.php",
        "phpstan": "vendor/bin/phpstan analyse --configuration phpstan.neon",
        "neon": "vendor/bin/neon-lint .",
        "pest": "./vendor/bin/pest --parallel --no-coverage",
        "test-ci": "./vendor/bin/pest --no-coverage",
        "test": [
            "@cs",
            "@phpstan",
            "@neon",
            "@pest"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "pestphp/pest-plugin": true
        }
    }
}
